/*********************************包含头文件********************************/
#include <iom64v.h>
#include <macros.h>

/****************************************************************************
函数功能:延时子程序
入口参数:
出口参数:
****************************************************************************/
void delay(void)
{
 	 int i;
  	 for(i=0;i<200;i++);
}
/****************************************************************************
函数功能:主程序
入口参数:
出口参数:
****************************************************************************/
void main(void)
{
 	 int j;
 	 int keyvalue=0;
	 DDRC=0x0F;
	 while(1)
	 {
		  PORTC = 0x0E;
		  for(j=0;j<5;j++);
    	  if((PINC&0xF0)!=0xF0)
    	  {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=4;
        		if((PINC&0x20)==0)		
        		keyvalue=3;
        		if((PINC&0x40)==0)		
        		keyvalue=2;
    			if((PINC&0x80)==0)		
        		keyvalue=1;
        		NOP();
        	 }
    	 }
		  PORTC = 0x0D;
		  for(j=0;j<5;j++);	  
    	  if((PINC&0xF0)!=0xF0)
    	  {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=8;
        		if((PINC&0x20)==0)		
        		keyvalue=7;
        		if((PINC&0x40)==0)		
        		keyvalue=6;
    			if((PINC&0x80)==0)		
        		keyvalue=5;
        		NOP();
        	 }
    	 }
		  PORTC = 0x0B;
		  for(j=0;j<5;j++);
    	  if((PINC&0xF0)!=0xF0)
    	  {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=12;
        		if((PINC&0x20)==0)		
        		keyvalue=11;
        		if((PINC&0x40)==0)		
        		keyvalue=10;
    			if((PINC&0x80)==0)		
        		keyvalue=9;
        		NOP();
        	 }
    	 }
		  PORTC = 0x07;
		  for(j=0;j<5;j++);
    	  if((PINC&0xF0)!=0xF0)
    	  {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=16;
        		if((PINC&0x20)==0)		
        		keyvalue=15;
        		if((PINC&0x40)==0)		
        		keyvalue=14;
    			if((PINC&0x80)==0)		
        		keyvalue=13;
        		NOP();
        	 }
    	 }
	}
}