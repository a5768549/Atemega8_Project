/*********************************包含头文件********************************/
#include <iom64v.h>
#include <macros.h>

/****************************************************************************
函数功能:延时子程序
入口参数:
出口参数:
****************************************************************************/
void delay(void)
{
 	 int i;
  	 for(i=0;i<200;i++);
}
void find_key(unsigned char n)
{
    switch(n)
	{
	    case 1:PORTF = 1;
	      break;
		case 2:PORTF = 2;
	      break;
    	case 3:PORTF = 3;
	      break;
        case 4:PORTF = 4;
	      break;
	    case 5:PORTF = 5;
	      break;
	    case 6:PORTF = 6;
	      break;
	    case 7:PORTF = 7;
	      break;
        case 8:PORTF = 8;
	      break;
	    case 9:PORTF = 9;
	      break;
	    default:
	      break;	
	}	  
}
/****************************************************************************
函数功能:主程序
入口参数:
出口参数:
****************************************************************************/
void main(void)
{
 	 int j;
 	 int keyvalue=0;
	 DDRF = 0XFF;
	 DDRC=0x0F;
	 while(1)
	 {
		  PORTC = 0x0E;
		  if((PINC&0xF0)!=0xF0)
    	  {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=4;
        		if((PINC&0x20)==0)		
        		keyvalue=3;
        		if((PINC&0x40)==0)		
        		keyvalue=2;
    			if((PINC&0x80)==0)		
        		keyvalue=1;
        		NOP();
        	 }
    	 }
		 PORTC = 0x0D;	  
    	 if((PINC&0xF0)!=0xF0)
    	 {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=8;
        		if((PINC&0x20)==0)		
        		keyvalue=7;
        		if((PINC&0x40)==0)		
        		keyvalue=6;
    			if((PINC&0x80)==0)		
        		keyvalue=5;
        		NOP();
        	 }
    	 }
     	 PORTC = 0x0B;
    	 if((PINC&0xF0)!=0xF0)
    	 {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=12;
        		if((PINC&0x20)==0)		
        		keyvalue=11;
        		if((PINC&0x40)==0)		
        		keyvalue=10;
    			if((PINC&0x80)==0)		
        		keyvalue=9;
        		NOP();
        	 }
    	 }
		 PORTC = 0x07;
		 if((PINC&0xF0)!=0xF0)
    	 {
    	   	  delay();
        	  if((PINC&0xF0)!=0xF0)
        	  {
        	   	if((PINC&0x10)==0)	 	
        		keyvalue=16;
        		if((PINC&0x20)==0)		
        		keyvalue=15;
        		if((PINC&0x40)==0)		
        		keyvalue=14;
    			if((PINC&0x80)==0)		
        		keyvalue=13;
        		NOP();
        	 }
    	 }
	     find_key(keyvalue);
	}
}