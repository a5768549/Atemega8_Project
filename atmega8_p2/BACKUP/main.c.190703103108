//定時器0初始化
void timer0_int(void)
{
    TIMSK = 0x01; //T0/C0溢出中斷使能
	TCCR0 =(1<<CS01) | (1<<CS00);
	TCNT0 = 0X05;//0XFF   256    (0xFF-0X05) *8M/64
	
}
//CPU總體初始化
void init_devices(void)
{
   
 CLI(); //disable all interrupts
 port_init();
 MCUCR = 0x00;
 GICR  = 0x00;
 TIMSK = 0x00; //timer interrupt sources
 timer0_int();
 SEI(); //re-enable interrupts
 //all peripherals are now initialized
}
//定時器0///////////////////////////////////////////////////////////////////////
#pragma interrupt_handler timer0_ovf_isr:10
void timer0_ovf_isr(void)
{    
   TCNT0 = 0X05;//內部晶振，幾分頻算出時間初值
   data++;
   if(500 == data)// 500*(255-5)*(8M/64)=T
   {
       S_OFF;		  
		  PORTD = 0x01;
		  S_1;		  
		  delay_ms(i);
		  
		  S_OFF;		  
		  PORTD = 0x01;
		  S_2;		  
		  delay_ms(i);
		  
		  S_OFF;		  
		  PORTD = 0x01;
		  S_3;		  
		  delay_ms(i);
		  
		  S_OFF;		  
		  PORTD = 0x01;
		  S_4;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x02;
		  S_4;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x04;
		  S_4;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x08;
		  S_4;		  
		  delay_ms(i);	
		  
		  S_OFF;		  
		  PORTD = 0x08;
		  S_3;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x08;
		  S_2;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x08;
		  S_1;		  
		  delay_ms(i);		
		  
		  S_OFF;		  
		  PORTD = 0x10;
		  S_1;		  
		  delay_ms(i);	
		  
		  S_OFF;		  
		  PORTD = 0x20;
		  S_1;		  
		  delay_ms(i);	
   }//end of if(1000==++cnn)
}//end of void timer0_ovf_isr(void)
////////////////////////////////////////////////////////////////////////////////
void main(void)
{
   init_devices();
   S_OFF;
   S_1;
   while(1)
   {      
   }
}