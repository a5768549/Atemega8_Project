/******************************************************************************* 
* 函數名稱: delay_ms()
* 入口參數: millisecond : 輸入延時毫秒的時間
* 出口參數: 
* 功能描述: 毫秒的延時  	
*******************************************************************************/ 
//定時器0初始化
void timer0_int(void)
{
     TCCR0 =(1<<CS01) | (1<<CS00);
	 TCNT0 = 0X05;
	 TIMSK = 0x01; //T0/C0溢出中斷使能
}
/******************************************************************************* 
* 函數名稱: delay_ms()
* 入口參數: millisecond : 輸入延時毫秒的時間
* 出口參數: 
* 功能描述: 毫秒的延時  	
*******************************************************************************/ 
//CPU總體初始化
void init_devices(void)
{
   por_init();
   timer0_int();
   SEI();
}
/******************************************************************************* 
* 函數名稱: delay_ms()
* 入口參數: millisecond : 輸入延時毫秒的時間
* 出口參數: 
* 功能描述: 毫秒的延時  	
*******************************************************************************/ 
unsigned int ad_cat(void)//電壓採集函數
{
     unsigned int t1,t2;
	 ADCSRA = 0X00;//disable adc
	 ADMUX=0x07;//ref  左對齊  ADC7
	 ACSR = 0x80;//使能adc可用，不用修改
	 ADCSRA|=BIT(ADEN);           
	 ADCSRA|=BIT(ADSC);           
	 while(!(ADCSRA&(BIT(ADIF))));
     ADCSRA&=~BIT(ADIF);
     t1 = (unsigned int)ADCL;
     t2 = (unsigned int)ADCH;
     t2 = (t2<<8)+t1;
     return t2;
}
/******************************************************************************* 
* 函數名稱: delay_ms()
* 入口參數: millisecond : 輸入延時毫秒的時間
* 出口參數: 
* 功能描述: 毫秒的延時  	
*******************************************************************************/ 
unsigned int ad_chane(unsigned int i)//電壓轉換函數
{
   long x;
   unsigned int y;
   x = (2500*(long)i)/1024;
   y = (unsigned int)x;
   return y;
}
/******************************************************************************* 
* 函數名稱: delay_ms()
* 入口參數: millisecond : 輸入延時毫秒的時間
* 出口參數: 
* 功能描述: 毫秒的延時  	
*******************************************************************************/ 
//定時器0///////////////////////////////////////////////////////////////////////
#pragma interrupt_handler timer0_ovf_isr:17
void timer0_ovf_isr(void)
{    
   TCNT0 = 0X65;//內部晶振，幾分頻算出時間初值
   cnn++;
   if(4==cnn)
   {
      cnn=0;
	  ad++;
      if(25==ad)//AD採集
         {
         ad=0;
	     ad_data1=ad_cat();
		 ad_data2=ad_chane(ad_data1);
         }
      switch(i++)
      {
	     case 0:S_OFF;display(ad_data2/1000);S_1;break;
		 case 1:S_OFF;display1((ad_data2%1000)/100);S_2;break;
		 case 2:S_OFF;display((ad_data2%100)/10);S_3;break;
		 case 3:S_OFF;display(ad_data2%10);S_4;i=0;break;
		 default:i=0;break;
	  }//end of switch(i++)
   }//end of if(10==++cnn)
}//end of void timer0_ovf_isr(void)
