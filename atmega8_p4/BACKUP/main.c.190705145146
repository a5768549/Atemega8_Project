//ICC-AVR application builder
//atmega8_p2
/*
	功能：
		預設跑七段顯示器迴圈
		按鈕按第一下：七段顯示器從0000跑到9999
		按鈕按第二下：七段顯示器從9999跑到6666，同時記錄回到第一下 
*/ 

#include<iom8v.h>
#include<macros.h>

#define S_1      PORTC &= ~BIT(0);PORTC|=BIT(1) ;PORTC|=BIT(2) ;PORTC|=BIT(3); 
#define S_2      PORTC |= BIT(0) ;PORTC&=~BIT(1);PORTC|=BIT(2) ;PORTC|=BIT(3);
#define S_3      PORTC |= BIT(0) ;PORTC|=BIT(1) ;PORTC&=~BIT(2);PORTC|=BIT(3);  
#define S_4      PORTC |= BIT(0) ;PORTC|=BIT(1) ;PORTC|=BIT(2) ;PORTC&=~BIT(3);
#define S_OFF    PORTC |= BIT(0) ;PORTC|=BIT(1) ;PORTC|=BIT(2) ;PORTC|=BIT(3);  
#define S_ON     PORTC &= ~BIT(0);PORTC&=~BIT(1);PORTC&=~BIT(2);PORTC&=~BIT(3);

	
unsigned int seg[10] = 
{
	0x3f,0x06,0x5b,0x4f,
	0x66,0x6d,0x7d,0x07,
	0x7f,0x6f
};

//初始化 變量 聲明//////////////////////////////////////////////////////////////
int data = 0;
int flag = 0;
int count = 0;
int th = 0;
int hu = 0;
int ten = 0;
int num = 0;
int i = 0;

void key_scan(void)
{
	if((PINB&0x3F)!=0x3F)     //假如1~8顆按鈕有被按下去(=0) 
	{ 
		delay_ms(20);
		if((PINB&0x3E) == 0x3E)
		{ 
			delay_ms(20);
			while((PINB) == 0X3E)
			{
				flag = flag + 1;
				
				delay_ms(50);
			}
			//LED = 1 會等於 LED = 0XF1，LED = 2 會等於 LED = 0XF2，以此類推 
		}
	}
}

void up_count(void)
{
  	S_OFF;
	th = flag / 1000;
	PORTD = seg[th];
	S_1;
	delay_ms(5);
	S_OFF;
	hu = (flag / 100) % 10;
	PORTD = seg[hu];
	S_2;
	delay_ms(5);
	S_OFF;
	ten = (flag / 10) % 10;
	PORTD = seg[ten];
	S_3;
	delay_ms(5);
	S_OFF;
	num = flag % 10;
	PORTD = seg[num];
	S_4;
	delay_ms(5);
}
void btn1(void)
{
 	for(i = 0;i<10000;i++)
	{
	 	S_OFF;
	 	th = i / 1000;
		PORTD = seg[th];
		S_1;
		delay_ms(10);
		S_OFF;
		hu = (i / 100) % 10;
		PORTD = seg[hu];
		S_2;
		delay_ms(10);
		S_OFF;
		ten = (i / 10) % 10;
		PORTD = seg[ten];
		S_3;
		delay_ms(10);
		S_OFF;
		num = i % 10;
		PORTD = seg[num];
		S_4;
		delay_ms(10);
	}
}

void btn2(void)
{
 	 for(i = 9999;i>6665;i--)
	 {
	 	S_OFF;
	 	th = i / 1000;
		PORTD = seg[th];
		S_1;
		delay_ms(10);
		S_OFF;
		hu = (i / 100) % 10;
		PORTD = seg[hu];
		S_2;
		delay_ms(10);
		S_OFF;
		ten = (i / 10) % 10;
		PORTD = seg[ten];
		S_3;
		delay_ms(10);
		S_OFF;
		num = i % 10;
		PORTD = seg[num];
		S_4;
		delay_ms(10);
	}
}



void delay_us(unsigned int microsecond) 
{      
    do 
	{ 
        microsecond--; 
	}         
    while (microsecond>1); 
}

void delay_ms(unsigned int millisecond) 
{      
    while (millisecond--)
	{
        delay_us(999);
	}  
}

//I、O口初始化
void port_init(void)
{
 DDRB  = 0XC0;//1100 0000
 PORTB = 0XFF;
 PORTC = 0xFF; //m103 output only
 DDRC  = 0xFF;
 PORTD = 0xFF;
 DDRD  = 0xFF;
}

//定時器0初始化
void timer0_int(void)
{
    TIMSK = 0x01; //T0/C0溢出中斷使能
	TCCR0 =(1<<CS01) | (1<<CS00);
	TCNT0 = 0X05;//0XFF   256    (0xFF-0X05) *8M/64
	
}
//CPU總體初始化
void init_devices(void)
{
 CLI();
 port_init();
 MCUCR = 0x00;
 GICR  = 0x00;
 TIMSK = 0x00;
 timer0_int();
 SEI();
}

#pragma interrupt_handler timer0_ovf_isr:10
void timer0_ovf_isr(void)
{    
	TCNT0 = 0X05;//內部晶振，幾分頻算出時間初值
	data++;
	if(5000 == data)// 5000*(255-5)*(8M/64)=T
	{
		data = 0;
		S_OFF;

	}
}//end of void timer0_ovf_isr(void)


void main(void)
{
   init_devices();
   S_OFF;
   while(1)
   {   
		key_scan();
		up_count();
   }
}
